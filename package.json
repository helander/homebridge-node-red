{
  "private": true,
  "displayName": "Node Red plugin for Homebridge",
  "name": "@helander/homebridge-node-red",
  "version": "2.0.0",
  "description": "Run Node Red inside Homebridge.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/helander/homebridge-node-red.git"
  },
  "bugs": {
    "url": "https://github.com/helander/homebridge-node-red/issues"
  },
  "engines": {
    "node": "^18.17.0 || ^20.9.0",
    "homebridge": "^1.6.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "lintfix": "eslint src/**.ts --fix",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "homebridge-plugin",
    "node-red"
  ],
  "dependencies": {
    "node-red": "^3.1.3",
    "node-red-contrib-homebridge-automation": "^0.1.11"
  },
  "devDependencies": {
    "@types/node": "^18.16.20",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "homebridge": "^1.6.0",
    "nodemon": "^2.0.22",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
